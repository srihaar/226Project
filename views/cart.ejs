<div class="container">
  <div class="card">
      <div class="header">
          <h4 class="title">Cart</h4>
          
      </div>
      <div class="content">
         <div ng-if="cart.length == 0">
           You have nothing to show in cart!!!
           <td><a ng-click="goBack()">Go back to add items to cart</a></td>

         </div>

         <div ng-show="cart.length>0">

          <table class="table">
             <thead>
               <tr>
                 <th>Product Name</th>
                 <th>Price</th>
                 <th>Quantity</th>
                 <th>Vendor Name</th>
               </tr>
             </thead>
             <tbody>
               <tr ng-repeat = "item in cart">
                 <td>{{item.ProductName}}</td>
                 <td>{{item.ProductPrice * item.quantity | currency}}</td>
                 <td>
                    <select ng-model="item.quantity" ng-change="updatePrice()" ng-options="value for value in values">
                    
                   </select>
                 </td>
                 <td>
                  {{item.Name}}
                 </td>
                 <td>
                   <button class="btn btn-danger" role="button" ng-click="remove(item,$index)"> 
                      <span class="glyphicon glyphicon-remove"></span> Remove
                   </button>
                   

                 </td>
               </tr>
               
                 
               
               <tr>
                 <td>
                  <a ng-click="goBack()">Go back to add more items to cart</a>
                 </td>
                
                 
                 <td>
                   Total Price:
                 &nbsp;&nbsp;&nbsp;
                 
                   {{totalPrice|currency}}
                 </td>
               </tr>
             </tbody>
          </table>


          </div>
          <div class="row" align="center" ng-if="cart.length>0">
        
        <button class="btn btn-success btn-md" ng-click="goToCheckout()">Checkout</button>
      </div>
      </div>
  </div>
</div>