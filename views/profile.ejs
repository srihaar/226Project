

<div class="container sign-in-up">
  <div class="row">
    <div class="">
      <br/>
      <!-- Nav tabs -->
      <div class="text-center">
        <div class="btn-group">
          <h4>View Or Edit Profile</h4>
        </div>
      </div>
      <div class="container">
        <div class="tab-pane" id="new">
          <br/>
          <fieldset>
          <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-user"></i>
                <input class="form-control input-lg" placeholder="Firstname" type="text" ng-model="user.Firstname"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon"> 
                <i class="fa fa-user"></i>
                <input class="form-control input-lg" placeholder="Lastname" type="text" ng-model="user.Lastname"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon"> 
                <i class="fa fa-user"></i>
                <input class="form-control input-lg" placeholder="Phone Number" type="text" ng-model="user.Phonenumber"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <input class="form-control input-lg" placeholder="Email Address" type="text" ng-model="user.Email"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-key"></i>
                <input class="form-control input-lg" placeholder="Password" type="password" ng-model="user.password"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <input class="form-control input-lg" placeholder="Street" id="" type="text" ng-model="user.Street"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <input class="form-control input-lg" placeholder="Apt Number" id="" type="text" ng-model="user.Aptnumber"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <input class="form-control input-lg" placeholder="City" id="" type="text" ng-model="user.City"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <input class="form-control input-lg" placeholder="state" id="" type="text" ng-model="user.State"/>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <input class="form-control input-lg" placeholder="Zipcode" id="" type="text" ng-model="user.Zipcode"/>
              </div>
            </div>
             <hr/>
            <div class=" text-center">
            <button class="btn btn-primary" ng-click="saveProfile()">Save</button>
          </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>